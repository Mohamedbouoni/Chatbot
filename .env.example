# TruthBot AI Configuration
# Copy this file to .env and fill in your actual values

# ===== DEPLOYMENT MODE =====
# Set to "true" for cloud deployment (Render, Railway, etc.)
# Set to "false" for local deployment with Ollama
USE_HUGGINGFACE=false

# ===== LOCAL DEPLOYMENT (Ollama) =====
OLLAMA_MODEL=qwen:7b
OLLAMA_BASE_URL=http://localhost:11434

# ===== CLOUD DEPLOYMENT (Hugging Face) =====
# Get your FREE API key from: https://huggingface.co/settings/tokens
HUGGINGFACE_API_KEY=your_huggingface_token_here

# ===== SEARCH API (Required for both) =====
# Get your API key from: https://serper.dev/dashboard
SERPER_API_KEY=your_serper_api_key_here

# ===== OPTIONAL SETTINGS =====
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760
DEBUG=False
